<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonathanwaters.termmanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermManager">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity"/>
        <activity android:name=".TermListActivity"
            android:label="Terms"/>
        <activity android:name=".CourseListActivity"
            android:label="Courses"/>
        <activity android:name=".AssessmentListActivity"
            android:label="Assessments"/>
        <activity android:name=".TermDetailActivity"
            android:label="Term Detail"/>
        <activity android:name=".TermAddActivity"
            android:label="Term Add"/>
        <activity android:name=".TermEditActivity"
            android:label="Term Edit"/>
        <activity android:name=".CourseDetailActivity"
            android:label="Course Detail"/>
        <activity android:name=".CourseAddActivity"
            android:label="Course Add"/>
        <activity android:name=".CourseEditActivity"
            android:label="Course Edit"/>
        <activity android:name=".AssessmentDetailActivity"
            android:label="Assessment Detail"/>
        <activity android:name=".AssessmentAddActivity"
            android:label="Assessment Add"/>
        <activity android:name=".AssessmentEditActivity"
            android:label="Assessment Edit"/>
        <receiver android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>